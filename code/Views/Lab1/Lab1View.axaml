<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:code.ViewModels"
             x:Class="code.Views.Lab1View"
             x:DataType="vm:Lab1ViewModel">
    <Border Background="#181818" CornerRadius="8" Padding="30" MaxWidth="600">
        <StackPanel Spacing="20">
            <TextBlock Text="Лабораторна робота 1 - RNG" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      FontSize="24"
                      FontWeight="Bold"/>
            
            <Separator Background="#D4AF37" Height="1" Margin="0,5,0,15"/>
            
            <TextBox Text="{Binding Count, Mode=TwoWay}"
                     Watermark="Введіть кількість чисел"
                     Padding="12,8"
                     CornerRadius="4"/>
    
            <CheckBox Content="Використовувати власний генератор" 
                      IsChecked="{Binding IsCustomGenerator}"/>
            
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="Згенерувати" Command="{Binding GenerateCommand}"/>
                <Button Content="Розрахувати період" Command="{Binding CalculatePeriodCommand}"/>
                <Button Content="Обчислити π" Command="{Binding TestPiCalculationCommand}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                <Button Content="Повернутися до меню"
                        Command="{Binding ReturnToMenuCommand}"
                        Width="450"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>

            <Border Background="#1E1E1E" CornerRadius="6" Padding="15" IsVisible="{Binding Message, Converter={x:Static ObjectConverters.IsNotNull}}">
                <TextBlock Text="{Binding Message}" 
                           Foreground="#D4AF37" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </Border>
            
            <Border Background="#1E1E1E" CornerRadius="6" Padding="15" IsVisible="{Binding PiValue, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel>
                    <TextBlock Text="Обчислене значення π:" 
                              Foreground="#E6D9A5" 
                              Margin="0,0,0,5"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PiValue}" 
                              FontWeight="Bold"
                              FontSize="20"
                              Foreground="#D4AF37"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>